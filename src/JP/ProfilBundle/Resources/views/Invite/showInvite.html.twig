  {% extends "JPProfilBundle:Default:index.html.twig" %}
  {% block profil %} 
           <div class="row">
            <div class="col-md-4">
              <!-- Profile Image -->
              <div class="box box-primary">
                <div class="box-body box-profile">
                  <img class="profile-user-img img-responsive img-circle" src="{{asset('bundles/jpbundles/dist/img/user4-128x128.jpg')}}" alt="User profile picture">
                  <h3 class="profile-username text-center">{{profil.nom ~" "~ profil.prenom}}</h3>                
             
                      <p class="text-muted text-center">Invité Par :  <a href="{{ path('jp_profil_member_show', { 'id': profil.inviteby.id }) }}">{{profil.inviteby.nom~ " " ~profil.inviteby.prenom}}</a></p>
                     
                 
                <div class="text-center">
                   <a class="btn btn-default margin" href="{{ path('jp_profil_invite') }}"><i class="fa fa-undo"></i> Retour à la liste</a> 
                   <a class="btn btn-warning margin" href="{{ path('jp_profil_invite_edit', { 'id': profil.id }) }}"><i class="fa fa-edit"></i> Modifier</a>             

                  
                  </div>
                </div><!-- /.box-body -->
              </div><!-- /.box -->

              
            </div><!-- /.col -->

             <div class="col-md-4">
              <!-- Profile Image -->
             <!-- About Me Box -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Coordonnées</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <strong><i class="fa fa-book margin-r-5"></i>Domicile</strong>
                  <p class="text-muted">
                      {{profil.domicile}}
                  </p>

                  <hr>

                  <strong><i class="fa fa-map-marker margin-r-5"></i> Numero</strong>
                  <p class="text-muted">Malibu, California</p>

                  <hr>

                  <strong><i class="fa fa-pencil margin-r-5"></i> Email</strong>
                  <p>
                    <span class="label label-danger">UI Design</span>
                    <span class="label label-success">Coding</span>
                    <span class="label label-info">Javascript</span>
                    <span class="label label-warning">PHP</span>
                    <span class="label label-primary">Node.js</span>
                  </p>

                  <hr>

                </div><!-- /.box-body -->
              </div><!-- /.box -->

              <!-- About Me Box -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Vie professionnel</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <strong><i class="fa fa-book margin-r-5"></i> Profession</strong>
                  <p class="text-muted">
                   {{profil.profession.designation}}
                  </p>

                  <hr>

                
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->


             

          </div><!-- /.col -->

        

    {% endblock %}



 


