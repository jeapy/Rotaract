{% extends 'base.html.twig' %}

{% block body %}
    <h1>Clubs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Typeclub</th>
                <th>Designation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td><a href="{{ path('profil_member_club_show', { 'id': club.id }) }}">{{ club.id }}</a></td>
                <td>{{ club.typeclub }}</td>
                <td>{{ club.designation }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('profil_member_club_show', { 'id': club.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('profil_member_club_edit', { 'id': club.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('profil_member_club_new') }}">Create a new club</a>
        </li>
    </ul>
{% endblock %}
