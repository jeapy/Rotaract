  {% extends "JPProfilBundle:Default:index.html.twig" %}
  {% block profil %} 
           <div class="row">
            <div class="col-md-4">
              <!-- Profile Image -->
              <div class="box box-primary">
                <div class="box-body box-profile">
                  <img class="profile-user-img img-responsive img-circle" src="{{asset('bundles/jpbundles/dist/img/user4-128x128.jpg')}}" alt="User profile picture">
                  <h3 class="profile-username text-center">{{profil.nom ~" "~ profil.prenom}}</h3>                
                  {% if profil.profiltype == 1 %}
                      <p class="text-muted text-center">MEMBRE</p>
                      {% else %}
                       <p class="text-muted text-center">POSTULANT</p>
                  {% endif %}
                 
                <div class="text-center">
                   <a class="btn btn-warning margin" href="{{ path('jp_profil_member_edit', { 'id': profil.id }) }}"><i class="fa fa-edit"></i> Modifier</a>             

                  <button class="btn btn-danger " data-toggle="modal" data-target="#confirm-delete"> <i class="fa fa-trash"></i> Supprimer</button>
                  </div>
                </div><!-- /.box-body -->
              </div><!-- /.box -->

              
            </div><!-- /.col -->

             <div class="col-md-4">
              <!-- Profile Image -->
             <!-- About Me Box -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Coordonnées</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <strong><i class="fa fa-book margin-r-5"></i>Domicile</strong>
                  <p class="text-muted">
                      {{profil.domicile}}
                  </p>

                  <hr>

                  <strong><i class="fa fa-map-marker margin-r-5"></i> Numero</strong>
                  <p class="text-muted">Malibu, California</p>

                  <hr>

                  <strong><i class="fa fa-pencil margin-r-5"></i> Email</strong>
                  <p>
                    <span class="label label-danger">UI Design</span>
                    <span class="label label-success">Coding</span>
                    <span class="label label-info">Javascript</span>
                    <span class="label label-warning">PHP</span>
                    <span class="label label-primary">Node.js</span>
                  </p>

                  <hr>

                  <strong><i class="fa fa-file-text-o margin-r-5"></i> Moyen de communication Priviligié</strong>
                  <p>{{profil.moyencommunication.designation}} <span class="label label-primary">{{profil.moyencommunication.valeur}}</span></p>
                </div><!-- /.box-body -->
              </div><!-- /.box -->

              <!-- About Me Box -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Vie professionnel</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <strong><i class="fa fa-book margin-r-5"></i> Profession</strong>
                  <p class="text-muted">
                   {{profil.profession.designation}}
                  </p>

                  <hr>

                  <strong><i class="fa fa-map-marker margin-r-5"></i> Entreprise /Ecole</strong>
                  <p class="text-muted"> {{profil.entrecole}}</p>

                  <hr>

                  <strong><i class="fa fa-pencil margin-r-5"></i> Formation initiale</strong>
                  <p>
                    <span class="label label-primary"> {{profil.formation.designation}}</span>
                   
                  </p>

                
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->


              <div class="col-md-4">
              <!-- Profile Image -->
              <!-- About Me Box -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Vie rotaractienne</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                 

                  <strong><i class="fa fa-map-marker margin-r-5"></i> Date d'intronisation</strong>
                  <p class="text-muted">{{profil.datintro}}</p>

                  <hr>

                  <strong><i class="fa fa-pencil margin-r-5"></i> Poste Actuel</strong>
                 <p class="text-muted">{{profil.postactuel}}</p>
                  <hr>

                  <strong><i class="fa fa-file-text-o margin-r-5"></i> Poste Précedent</strong>
                  <p>{{profil.postprecedent}}</p>

                   <hr>

                  <strong><i class="fa fa-file-text-o margin-r-5"></i> Fonction</strong>
                   {% if profil.fonction.organe %}
                  <p>{{profil.fonction.organe.designation}} <span class="label label-danger">{{profil.fonction.designation}}</span></p>
                    {% endif %}
                </div><!-- /.box-body -->
              </div><!-- /.box -->

              <!-- About Me Box -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Vie familliale</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <strong><i class="fa fa-book margin-r-5"></i> Conjoint</strong>
                   {% if profil.conjoint %}
                  <p class="text-muted">
                   {{profil.conjoint.nomprenom}} <span class="label label-info"> {{profil.conjoint.datenaissance}}</span>
                  </p>
                  {% endif %}
                  <hr>

                  <strong><i class="fa fa-map-marker margin-r-5"></i> Enfant</strong>
                  <p class="text-muted">Malibu, California</p>

                  <hr>

                  <strong><i class="fa fa-pencil margin-r-5"></i> Skills</strong>
                  <p>
                    <span class="label label-danger">UI Design</span>
                    <span class="label label-success">Coding</span>
                    <span class="label label-info">Javascript</span>
                    <span class="label label-warning">PHP</span>
                    <span class="label label-primary">Node.js</span>
                  </p>

                  <hr>

                  <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>
                  <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->

          </div><!-- /.col -->

         <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
               Supperssion de profil #{{profil.id}}
            </div>
            <div class="modal-body">
               Cette Action est irreversible ,Voulez vous vraiment supprimer le profil ?
            </div>
            <div class="modal-footer">

                <div class="row">
                        <div class="col-xs-6 text-left">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                         </div>
                        <div class="col-xs-6">
                             {{ form_start(delete_form) }}
                              <input type="submit" class="btn btn-danger" value="Delete">
                             {{ form_end(delete_form) }}
                       </div>
                  </div>
                
            </div>
        </div>
    </div>
</div>

    {% endblock %}



 


