  {% extends "JPProfilBundle:Default:index.html.twig" %}
  {% block profil %} 
 <div class="box box-primary">
                <div class="box-header">
                  <h3 class="box-title">LISTE DES MEMBRES ET POSTULANTS</h3>
                  <div class="box-tools">
                    <div class="input-group" style="width: 250px;">
                      <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Recherche...">
                      <div class="input-group-btn">
                        <button class="btn btn-sm btn-info"><i class="fa fa-search"></i></button>
                      </div>
                    </div>                    
                  </div>
                  <hr>
                  
                   <div class="pull-right" style="width: 130px;">
                     <a href="{{path('jp_profil_member_add')}}" class="btn btn-block btn-social btn-github btn-flat "><i class="fa fa-user-plus"></i> AJOUTER</a>
                    </div>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                  <table class="table table-hover">
                    <tr>
                      <th>Nom Prenom</th>
                      <th>Type de profil</th>
                      <th>Domicile</th>
                      <th>Profession</th>
                      
                    </tr>
                      {% for profil in profils %}                       
                    <tr>
                      <td>{{profil.nom~ " "~profil.prenom}}</td>
                      {% if profil.profiltype == 1 %}
                      <td><span class="label label-success">MEMBRE</span></td>
                      {% else %}
                      <td><span class="label label-primary">POSTULANT</span></td>
                      {% endif %}
                      <td>{{profil.domicile | upper}}</td>
                      <td>{{profil.profession.designation}}</td>
                   
                      <td> 
                         <a class="btn btn-info btn-sm" href="{{ path('jp_profil_member_show', { 'id': profil.id }) }}"><i class="fa fa-eye"></i></a>
                       <a class="btn btn-warning btn-sm" href="{{ path('jp_profil_member_edit', { 'id': profil.id }) }}"><i class="fa fa-edit"></i></a> </td>
                    </tr>
                     {% endfor %}
                    
                  </table>
                </div><!-- /.box-body -->
             


                <div class="box-footer no-padding">
                  <div class="Profil-controls">
                    
                    <a href="" class="btn btn-default btn-sm"><i class="fa fa-refresh"></i></a>
                    <div class="pull-right">
                      1-50/200
                      <div class="btn-group">
                        <button class="btn btn-default btn-sm"><i class="fa fa-chevron-left"></i></button>
                        <button class="btn btn-default btn-sm"><i class="fa fa-chevron-right"></i></button>
                      </div><!-- /.btn-group -->
                    </div><!-- /.pull-right -->
                  </div>
                </div>
              </div><!-- /. box -->

     {% endblock %}