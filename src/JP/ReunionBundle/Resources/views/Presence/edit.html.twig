 {% extends "JPReunionBundle:Default:index.html.twig" %}
  {% block reunion %} 
          <div class="box box-danger">
                <div class="box-header with-border">
                  <h3 class="box-title">Modifier une Reunion</h3>
                  <div class="box-tools"> 
                      <div class="box-tools">                    
                          <div class="btn-group"> 
                             <a href="{{ path('reunion_show', { 'id': reunion.id }) }}" class="btn btn-sm btn-default"><i class="fa fa-ban "></i> Annuler</a>
                            <a href="{{ path('reunion_index') }}" class="btn btn-sm btn-info"><i class="fa fa-undo "></i> Retour Ã  la liste</a>
                          </div>                                     
                      </div>
                    </div>
                </div>
                <div class="box-body">
                   {{ form_start(edit_form) }}              

                  {{ form_errors(edit_form) }}

               <div class="row">
                  <div class="col-xs-4">
                    {{ form_label(edit_form.datereunion) }}
                      {{ form_errors(edit_form.datereunion) }}
                      <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>                       
                        {{ form_widget(edit_form.datereunion, {'attr': {'class': 'form-control datetimepicker', 'placeholder':''}}) }}
                      </div>
                    </div>
                   <div class="col-xs-8">   
                    {{ form_label(edit_form.lieu) }}
                      {{ form_errors(edit_form.lieu) }}    
                      <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>                       
                        {{ form_widget(edit_form.lieu, {'attr': {'class': 'form-control', 'placeholder':'Lieu'}}) }}
                      </div>
                    </div>
                </div>

                 <br>


 <div class="row">
   <div class="col-md-6">
                     {{ form_label(edit_form.typereunion) }}
                      {{ form_errors(edit_form.typereunion) }}
                       <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-o"></i></span>                       
                        {{ form_widget(edit_form.typereunion, {'attr': {'class': 'form-control', 'placeholder':''}}) }}
                      </div>
                </div>
                   
                <div class="col-md-6">
                {{ form_label(edit_form.objet) }}
                      {{ form_errors(edit_form.objet) }}
                       <div class="input-group">                      
                        <span class="input-group-addon"><i class="fa fa-user-o"></i></span>                       
                        {{ form_widget(edit_form.objet, {'attr': {'class': 'form-control', 'placeholder':''}}) }}
                      </div>
                </div>
               
              
              </div>   
  
 <br>
                         
                      
                             
                 {{ form_end(edit_form) }}
                </div><!-- /.box-body -->
              </div><!-- /.box -->


    {% endblock %}


