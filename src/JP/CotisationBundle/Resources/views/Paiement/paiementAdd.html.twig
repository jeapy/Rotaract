 {% extends "JPCotisationBundle:Default:index.html.twig" %}
  {% block cotisation %} 

        <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Type de cotisation : {{ cotisation.typecotisation}}</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <strong><i class="fa fa-money margin-r-5"></i>Montant :</strong>
                       <span class="label label-success">{{ cotisation.montant}}  </span>

                </div><!-- /.box-body -->
              </div><!-- /.box -->

                <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title">Liste des Membres et Postulants</h3>
                </div><!-- /.box-header -->
               
                  <div class="box-body table-responsive no-padding">
                  <table class="table table-hover">
                    <tr>
                      <th>Nom Prenom</th>
                      <th>Type de profil</th>
                      
                      <th></th>
                      
                    </tr>
                      {% for profil in profils %}                       
                    <tr>
                      <td>{{profil.nom~ " "~profil.prenom}}</td>
                      {% if profil.profiltype == 1 %}
                      <td><span class="label label-success">MEMBRE</span></td>
                      {% else %}
                      <td><span class="label label-primary">POSTULANT</span></td>
                      {% endif %}
                     
                     
                   
                      <td> 
                         <a class="btn btn-info btn-sm" href="{{path('jp_cotisation_paye',{'id': cotisation.id,'profil': profil.id})}}"><i class="fa fa-money"></i> Payer</a>
                    
                    </tr>
                     {% endfor %}
                    
                  </table>
                </div><!-- /.box-body -->
               
              </div><!-- /.box -->

               {% block paiement %}  {% endblock %}

               <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title">Liste de Paiement</h3>
                </div><!-- /.box-header -->
               
                  <div class="box-body table-responsive no-padding">
                  <table class="table table-hover">
                    <tr>
                      <th>Nom Prenom</th>
                      <th>Montant</th>
                      <th>Date</th>
                     
                      
                    </tr>
                      {% for payeur in payeurs %}                       
                    <tr>
                      <td>{{payeur.profil.nom~ " "~payeur.profil.prenom}}</td>
                     
                      <td><span class="label label-success">{{payeur.montant}}</span></td>
                      <td> 
                         {{payeur.datepaiement|date('Y-m-d H:i:s')}}
                      </td> 
                    </tr>
                     {% endfor %}
                    
                  </table>
                </div><!-- /.box-body -->
               
              </div><!-- /.box -->
 
     {% endblock %}